# =============================================================================
# SpiderBotAIProject Docker Environment Configuration
# =============================================================================

# NVIDIA EULA Acceptance (Required)
ACCEPT_EULA=Y
PRIVACY_CONSENT=Y

# Isaac Lab Version (2.3.1 = Isaac Sim 5.1.0)
ISAAC_LAB_VERSION=2.3.1

# Docker Image Tag
IMAGE_TAG=latest

# Training Configuration
NUM_ENVS=512
MAX_ITERATIONS=10000
SEED=42

# Checkpoint Configuration
CHECKPOINT_PATH=/workspace/spiderbot/checkpoints/latest.pt

# GPU Configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# Logging
LOG_LEVEL=INFO
TENSORBOARD_PORT=6006
